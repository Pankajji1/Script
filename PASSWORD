<?php
$secret = "MY_SECRET_KEY";

function generateToken($secret) {
    $slot = floor(time() / 600);
    return strtoupper(substr(hash('sha256', $secret . $slot), 0, 12));
}

$token = generateToken($secret);

$apiUrl = "https://pro.zonmp.net/api?api=6ae74f95b3c8495f664f70e65fa06221ee1928a4&url=http://pankajxscripts.unaux.com/index.php?token=$token";

$ch = curl_init($apiUrl);
curl_setopt($ch, CURLOPT_RETURNTRANSFER, true);
$data = curl_exec($ch);
curl_close($ch);

$response = json_decode($data, true);
$shortenedUrl = $response["shortenedUrl"] ?? "ERROR_CREATING_LINK";

@system(strtoupper(substr(PHP_OS, 0, 3)) === 'WIN' ? "cls" : "clear");

$blue = "\033[1;34m";
$green = "\033[1;32m";
$red = "\033[1;31m";
$reset = "\033[0m";

echo $blue . "
  _____                                   
 |  __ \                                  
 | |__) |_ _ ___ _____   _____ _ __ __ _  
 |  ___/ _` / __/ __ \ \ / / _ \ '__/ _` | 
 | |  | (_| \__ \__ \ V /  __/ | | (_| |  
 |_|   \__,_|___/___/ \_/ \___|_|  \__,_|  
\n" . $reset;

echo "🔗 Link Password: " . $green . $shortenedUrl . "\n" . $reset;

function getPassword() {
    echo "[+] Enter Key: ";
    return trim(fgets(STDIN));
}

function checkPassword() {
    global $token;
    $attempt = getPassword();
    if (trim($attempt) === trim($token)) {
        echo "\033[1;32m✅ Password correct!\n\033[0m";
        sleep(1);
        file_put_contents("key", password_hash($token, PASSWORD_BCRYPT));
        return true;
    }
    echo "\033[1;31m❌ Wrong password!\n\033[0m";
    return false;
}

$expiryTime = 21600;
$file = "key";
if (file_exists($file) && (time() - filemtime($file) > $expiryTime)) {
    unlink($file);
}

if (!checkPassword()) {
    if (file_exists($file)) unlink($file);
    while (!checkPassword()) {
        sleep(1);
    }
}

echo "✅ Access Granted!\n";
?>    return false;
}

// Expiry time check
$expiryTime = 21600; // 6 hours
$file = "key";
if (file_exists($file) && (time() - filemtime($file) > $expiryTime)) {
    unlink($file); // Expired
}

// First password check
if (!checkPassword()) {
    if (file_exists($file)) unlink($file);
    while (!checkPassword()) {
        sleep(1);
    }
}

echo "✅ Access Granted!\n";
